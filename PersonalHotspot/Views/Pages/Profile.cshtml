@model PersonalHotspot.Areas.Management.Models.PersonalHotspotResume
@{
    var Age = DateTime.Now.Year - DateTime.Parse("22/09/1994").Year;
    var homeContent = Model.HomeContent;
    var aboutContent = Model.AboutContent;
    var titleDescriptionSkills = Model.TitleDescriptionSkills;
    var titleScoreSkills = Model.TitleScoreSkills;
    var timelineContents = Model.TimelineContents.OrderBy(tlc => tlc.Year).ThenBy(tlc => tlc.Month).ToList();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Meta Tags -->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport">
    <!-- Author -->
    <meta name="author" content="Themes Industry">
    <!-- description -->
    <meta name="description" content="">
    <!-- keywords -->
    <meta name="keywords" content="">
    <!-- Page Title -->
    <title>Mahdi Khardani | Personal Resume</title>
    <!-- Favicon -->
    <link href="~/Assets/personal-hotspot/images/favicon.ico" rel="icon">
    <!-- Bundle -->
    <link href="~/Assets/vendor/css/bundle.min.css" rel="stylesheet">
    <!-- Plugin Css -->
    <link href="~/Assets/vendor/css/LineIcons.min.css" rel="stylesheet">
    <link href="~/Assets/vendor/css/jquery.fancybox.min.css" rel="stylesheet">
    <link href="~/Assets/vendor/css/owl.carousel.min.css" rel="stylesheet">
    <!-- Style Sheet -->
    <link href="~/Assets/personal-hotspot/css/tootik.min.css" rel="stylesheet">
    <link href="~/Assets/personal-hotspot/css/line-awesome.min.css" rel="stylesheet">
    <link href="~/Assets/personal-hotspot/css/jquery.pagepiling.css" rel="stylesheet">
    <link href="~/Assets/personal-hotspot/css/style.css" rel="stylesheet">
    <link href="~/Assets/personal-hotspot/css/sweetalert2.min.css" rel="stylesheet" />
</head>

<body data-spy="scroll" data-target=".navbar" data-offset="90">

    <!-- START LOADER -->
    <div class="loader-bg">
        <div id="container">
            <svg viewBox="0 0 100 100">
                <defs>
                    <filter id="shadow">
                        <feDropShadow dx="0" dy="0" stdDeviation="0.5" flood-color="#dabd1d" />
                    </filter>
                </defs>
                <circle id="spinner" style="fill:transparent;stroke:#dabd1d;stroke-width: 8px;stroke-linecap: round;filter:url(#shadow);" cx="50" cy="50" r="45" />
            </svg>
        </div>
    </div>
    <!-- END LOADER -->
    <!-- START HEADER -->
    <header>
        <!--Navigation-->
        <nav class="navbar navbar-top-default navbar-expand-lg navbar-simple nav-line">
            <a href="#home" title="Logo" class="logo">
                <!--Logo Default-->
                <div class="mega-logo">
                    <img src="~/Assets/personal-hotspot/images/favicon.ico" alt="logo" class="ml-lg-3 m-0">
                </div>
            </a>

            <!--Side Menu Button-->
            <div class="navigation-toggle">
                <ul class="slider-social toggle-btn my-0">
                    <li>
                        <a href="javascript:void(0);" class="sidemenu_btn" id="sidemenu_toggle">
                            <span></span>
                            <span></span>
                            <span></span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!--Side Nav-->
        <div class="side-menu hidden">
            <span id="btn_sideNavClose">
                <i class="las la-times btn-close"></i>
            </span>
            <div class="inner-wrapper">
                <nav class="side-nav w-100">
                    <a href="#home" title="Logo" class="logo navbar-brand">
                        <img src="~/Assets/personal-hotspot/images/favicon.ico" alt="logo">
                    </a>
                    <ul class="navbar-nav text-capitalize">
                        <li class="nav-item">
                            <a class="nav-link" href="#home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#about">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#timeline">Timeline</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Contact</a>
                        </li>
                    </ul>
                    <div class="text-center sidebar_btn">
                        <a href="~/Assets/personal-hotspot/download-resume/resume.pdf" download class="btn btn-medium btn-rounded btn-yellow text-capitalize">Download Resume</a>
                    </div>
                </nav>

                <div class="side-footer w-100">
                    <ul class="social-icons-simple">
                        <li><a class="social-icon" target="_blank" href="@homeContent.FacebookLink"><i class="fab fa-facebook-f"></i> </a> </li>
                        <li><a class="social-icon" target="_blank" href="@homeContent.InstagramLink"><i class="fab fa-instagram"></i> </a> </li>
                        <li><a class="social-icon" target="_blank" href="@homeContent.GithubLink"><i class="fab fa-github"></i> </a> </li>
                        <li><a class="social-icon" target="_blank" href="@homeContent.LinkedinLink"><i class="fab fa-linkedin-in"></i> </a> </li>
                    </ul>
                    <p>© Mahdi Khardani @DateTime.Now.Year.</p>
                </div>
            </div>
        </div>
        <a id="close_side_menu" href="javascript:void(0);"></a>
    </header>
    <!-- END HEADER -->

    <div id="pagepiling">

        <!-- START BANNER -->
        <section class="section slide1 p-0" id="home">
            <div class="slider-area" id="slider-area">
                <div class="row align-items-center">
                    <div class="col-12 col-lg-6 image-order">
                        <div class="slider-image">
                            @{
                                String base64Image = Convert.ToBase64String(homeContent.ImageByteArray);
                                String imgSrc = String.Format("data:image/png;base64,{0}", base64Image);
                                <img src="@imgSrc" alt="@homeContent.ImageFileName">
                            }
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 text-md-center text-lg-left">
                        <div class="slider-content">
                            <h1 class="main-font text-uppercase"><span class="slider-text px-2"> @homeContent.GreetingLine </span> <span class="d-block text-yellow"> @homeContent.FullName</span></h1>
                            <p class="pt-3 alt-font content-para">
                                @homeContent.Summary
                            </p>
                        </div>
                    </div>
                </div>
                <!-- Circle-One -->
                <div class="circle-one">
                    <span data-tootik="About" data-tootik-conf="right dark square shadow">
                        <a href="#about">
                            <span class="animated-circle position-relative"></span>
                        </a>
                    </span>
                </div>
                <!-- Circle-Two -->
                <div class="circle-two">
                    <span data-tootik="Timeline" data-tootik-conf="left dark square shadow">
                        <a href="#timeline">
                            <span class="animated-circle position-relative"></span>
                        </a>
                    </span>
                </div>
                <!-- Circle-Three -->
                <div class="circle-five">
                    <span data-tootik="Contact" data-tootik-conf="bottom dark square shadow">
                        <a href="#contact">
                            <span class="animated-circle position-relative"></span>
                        </a>
                    </span>
                </div>
            </div>
        </section>
        <!-- END BANNER -->

        <!-- START SKILLS -->
        <section class="section slide2 skills" id="about">
            <div class="container">
                <div class="row pb-5">
                    <div class="col-12 col-md-7 pl-md-0">
                        <h3 class="main-font text-uppercase"><span class="text-yellow d-block"> @aboutContent.ProfileTitle </span> <span> @aboutContent.Technology </span></h3>
                        <p class="py-2 alt-font">@aboutContent.Description</p>
                    </div>
                    <div class="col-12 col-md-5 text-md-right pt-4 pt-md-0">
                        <h2 class="m-0 text-yellow main-font">@aboutContent.YearsOfExperience+</h2>
                        <p class="alt-font">Years of Experience</p>
                    </div>
                </div>

                <div class="row pt-md-5 skill-box">
                    <div class="col-12 col-md-6">
                        @{
                            var transformedList = titleDescriptionSkills.Select((value, index) => new { value, index }).GroupBy(x => x.index / 2).Select(g => g.Select(x => x.value).ToList()).ToList();

                            foreach (var sublist in transformedList)
                            {
                                <div class="row@(transformedList.IndexOf(sublist) % 2 != 0 ? " mt-5" : "")">
                                    @foreach (var tdskill in sublist)
                                    {
                                        <div class="col-12 col-md-6 text-center text-md-left pl-md-0">
                                            <h4 class="main-font text-yellow skill">@tdskill.Title</h4>
                                            <p class="alt-font text-white mt-3">@tdskill.Description</p>
                                        </div>
                                    }
                                </div>
                            }
                        }
                    </div>

                    <!-- Progress Bars -->
                    <div class="col-12 col-md-5 offset-md-1 text-left pr-md-0 bars-section">
                        <ul class="progress-bar-side">
                            @foreach (var tsskill in titleScoreSkills)
                            {
                                <li class="custom-progress text-white">
                                    <h6 class="mb-0 text-capitalize mons-font">@tsskill.Title<span class="float-right"><b class="numscroller">@tsskill.Score</b>%</span></h6>

                                    <div class="progress">
                                        <div class="progress-bar bg-yellow" role="progressbar" aria-valuenow="@tsskill.Score" aria-valuemin="0" aria-valuemax="100">
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <!-- END SKILLS -->

        <!-- START TIMELINE -->
        <section class="section slide3 timeline-bg" id="timeline">
            <div class="container">
                <div class="row pb-5 heading-row">
                    <div class="col-12 col-md-7">
                        <h3 class="main-font text-uppercase"><span class="text-yellow d-block text-uppercase"> My Career </span> <span> History & Timeline </span></h3>
                        <p class="py-2 alt-font">My achievements so far in my life.</p>
                    </div>
                    <div class="col-12 col-md-5 text-md-right pt-4 pt-md-0">
                        <h2 class="m-0 text-yellow main-font">@Age</h2>
                        <p class="alt-font">Years Old</p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="cd-horizontal-timeline loaded">
                            <div class="timeline">
                                <!-- Events-Wrapper -->
                                <div class="events-wrapper">
                                    <!-- Events -->
                                    <div class="events" style="width: 1950px;">
                                        <ol>
                                            @{
                                                var firstTimelineItem = timelineContents.FirstOrDefault();

                                                <li><a href="#" data-date="01/@firstTimelineItem.Month.ToString("D2")/@firstTimelineItem.Year" class="older-event selected" style="left: 130px;">@firstTimelineItem.Month.ToString("D2")-@firstTimelineItem.Year</a></li>
                                                foreach (var tlc in timelineContents.Skip(1))
                                                {
                                                    <li><a href="#" data-date="01/@firstTimelineItem.Month.ToString("D2")/@firstTimelineItem.Year+@timelineContents.IndexOf(tlc)" style="left: @((325+(timelineContents.IndexOf(tlc))*100))px;" class="">@tlc.Month.ToString("D2")-@tlc.Year</a></li>
                                                }
                                            }


                                            @*<li><a href="#" data-date="28/02/2017" style="left: 325px;" class="">2005</a></li>
                                                <li><a href="#" data-date="20/04/2017" style="left: 520px;" class="">2007</a></li>
                                                <li><a href="#" data-date="20/05/2017" style="left: 650px;">2009</a></li>
                                                <li><a href="#" data-date="09/07/2017" style="left: 845px;">2011</a></li>
                                                <li><a href="#" data-date="30/08/2017" style="left: 1040px;">2013</a></li>
                                                <li><a href="#" data-date="15/09/2017" style="left: 1105px;">2015</a></li>
                                                <li><a href="#" data-date="01/11/2017" style="left: 1300px;">2017</a></li>
                                                <li><a href="#" data-date="10/12/2017" style="left: 1495px;">2019</a></li>
                                                <li><a href="#" data-date="19/01/2018" style="left: 1625px;">2020</a></li>
                                                <li><a href="#" data-date="03/03/2018" style="left: 1820px;">2020</a></li>*@

                                        </ol>
                                        <span class="filling-line" aria-hidden="true"></span>
                                    </div>
                                    <!-- Events -->
                                </div>
                                <!-- Events-Wrapper -->
                                <ul class="cd-timeline-navigation">
                                    <li><a href="#" class="prev">Prev</a></li>
                                    <li><a href="#" class="next">Next</a></li>
                                </ul>
                                <!-- Timeline-Navigation -->
                            </div>
                            <!-- Timeline -->
                            <div class="events-content" style="height: 216.391px;">
                                <ol>

                                    @{
                                        <li class="selected" data-date="01/@firstTimelineItem.Month.ToString("D2")/@firstTimelineItem.Year">

                                            <!-- Main Content Div -->
                                            <div class="col-12 pl-md-0">
                                                <div class="main-content text-uppercase">
                                                    <h4 class="text-yellow main-font font-weight-normal">@firstTimelineItem.Title</h4>
                                                    <h2 class="main-font">@firstTimelineItem.Subtitle</h2>
                                                </div>
                                            </div>

                                            <!-- Sub Content Div -->
                                            <!-- Sub Content Div -->
                                            <div class="row align-items-center">
                                                <div class="sub-content">
                                                    <p>@firstTimelineItem.Paragraph</p>
                                                </div>
                                            </div>
                                        </li>
                                    }

                                    @foreach (var tlc in timelineContents.Skip(1))
                                    {
                                        <li data-date="01/@firstTimelineItem.Month.ToString("D2")/@firstTimelineItem.Year+@timelineContents.IndexOf(tlc)" class="">
                                            <!-- Main Content Div -->
                                            <div class="col-12 pl-md-0">
                                                <div class="main-content text-uppercase">
                                                    <h4 class="text-yellow main-font font-weight-normal">@tlc.Title</h4>
                                                    <h2 class="main-font">@tlc.Subtitle</h2>
                                                </div>
                                            </div>
                                            <!-- Sub Content Div -->
                                            <div class="row align-items-center">
                                                <div class="sub-content">
                                                    <p>@tlc.Paragraph</p>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ol>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <!-- END TIMELINE -->

        <!-- START CONTACT -->
        <section class="section slide5 contact-bg" id="contact">
            <div class="container">
                <div class="row pb-5">
                    <div class="col-12 col-md-7">
                        <h3 class="main-font text-uppercase"><span class="text-yellow d-block text-uppercase"> Contact Me </span> <span> Let's Get In Touch </span></h3>
                        <p class="py-2 alt-font">I am available for any project that matches my skills.</p>
                    </div>
                </div>
                <form class="contact-form" id="contact-form-data">
                    <div class="row pt-3">
                        <!-- Submission Popup -->
                        <div class="col-12">
                            <div class="col-sm-12 px-0" id="result"></div>
                        </div>
                        <!--Left Column-->
                        <div class="col-md-4">
                            <div class="form-group">
                                <input class="form-control" type="text" placeholder="Name" required id="name" name="Name">
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="tel" placeholder="Contact No" id="phone" name="Phone">
                            </div>

                            <div class="form-group">
                                <input class="form-control" type="email" placeholder="Email" required id="email" name="Email">
                            </div>
                        </div>
                        <!--Right Column-->
                        <div class="col-12 col-md-6 offset-md-1 contact-form">
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Type Your Message Here" id="message" required name="Message"></textarea>
                            </div>
                        </div>
                        <!-- Button -->
                        <div class="col-12 px-md-0">
                            <div class="contact-btn pt-5 text-center text-lg-left">
                                <button type="button" class="btn btn-medium btn-rounded btn-yellow text-capitalize contact_btn" id="contactNowButton">Contact Now</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </section>
        <!-- END CONTACT -->
    </div>

    <!-- Start Copyright -->
    <div class="slider-bottom">
        <div class="slider-footer w-auto">
            <ul class="social-icons-simple">
                <li><a class="social-icon" target="_blank" href="@homeContent.FacebookLink"><i class="fab fa-facebook-f"></i> </a> </li>
                <li><a class="social-icon" target="_blank" href="@homeContent.InstagramLink"><i class="fab fa-instagram"></i> </a> </li>
                <li><a class="social-icon" target="_blank" href="@homeContent.GithubLink"><i class="fab fa-github"></i> </a> </li>
                <li><a class="social-icon" target="_blank" href="@homeContent.LinkedinLink"><i class="fab fa-linkedin-in"></i> </a> </li>
            </ul>
        </div>
        <span class="slider-copyright text-grey">© Mahdi Khardani @DateTime.Now.Year.</span>
    </div>
    <!-- End Copyright -->

    <!-- JavaScript -->
    <script src="~/Assets/vendor/js/bundle.min.js"></script>

    <!-- Plugin Js -->
    <script src="~/Assets/vendor/js/jquery.appear.js"></script>
    <script src="~/Assets/vendor/js/jquery.fancybox.min.js"></script>
    <script src="~/Assets/vendor/js/owl.carousel.min.js"></script>

    <!-- CUSTOM JS -->
    <script src="~/Assets/personal-hotspot/js/jquery.pagepiling.min.js"></script>
    <script src="~/Assets/personal-hotspot/js/timeline.js"></script>
    <script src="~/Assets/personal-hotspot/js/script.js"></script>
    <script src="~/Assets/personal-hotspot/js/sweetalert2.all.min.js"></script>
    <script>
        // Function to handle key press event
        function handleKeyPress(event) {
            // Check if Ctrl and Shift keys are pressed and the key is 'R'
            if (event.ctrlKey && event.shiftKey && event.key === 'Q') {
                Swal.fire({
                    title: "Type your admin Password",
                    input: "password",
                    inputAttributes: {
                        autocapitalize: "off"
                    },
                    background: '#1b1f22',
                    color: '#dabd1d',
                    confirmButtonColor: '#dabd1d',
                    showCancelButton: true,
                    confirmButtonText: "Check",
                    showLoaderOnConfirm: true,
                    preConfirm: async (password) => {
                        var data = {
                            typedPassword: password
                        };
                        $.ajax({
                            url: '/Management/login/check',
                            type: 'POST',
                            contentType: 'application/json',
                            data: JSON.stringify(data),
                            success: function (response) {
                                if (response == 'True')
                                {
                                    location.href = '@Url.Action("index","homecontents", new { area = "Management" })';
                                }
                                  
                                else
                                {
                                    Swal.fire({
                                        title: "Authentication error",
                                        text: "Wrong password!",
                                        icon: "error",
                                        background: '#1b1f22',
                                        color: '#dabd1d',
                                        confirmButtonColor: '#dabd1d'
                                    });
                                }
                            },
                            error: function (error) {
                                console.error('Error:', error);
                            }
                        });
                    },
                    allowOutsideClick: () => !Swal.isLoading()
                });
            }
        }

        // Attach the event listener to the document
        document.addEventListener('keydown', handleKeyPress);

        $(document).on('click', '#contactNowButton', function (event) {
            var contactMessage = {
                Name: $('#name').val(),
                PhoneNumber: $('#phone').val(),
                Email: $('#email').val(),
                Message: $('#message').val()
            };

            $.ajax({
                url: '@Url.Action("sendmail","pages")',
                type: 'POST',
                data: contactMessage,
                success: function (response)
                {
                    Swal.fire({
                        title: "Well recieved",
                        text: "Your message have been delivered and you will be contacted shortly",
                        icon: "success",
                        background: '#1b1f22',
                        color: '#dabd1d',
                        confirmButtonColor: '#dabd1d'
                    });
                    location.href = '#home';
                },
                error: function (xhr, status, error) {
                    Swal.fire({
                        title: "Error",
                        text: "Unfortunately an error occurred, message not sent",
                        icon: "error",
                        background: '#1b1f22',
                        color: '#dabd1d',
                        confirmButtonColor: '#dabd1d'
                    });
                }
            });
        });
    </script>

</body>
</html>